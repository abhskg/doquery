# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=RAG Query API

# Security
SECRET_KEY=your-secret-key-here

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database
POSTGRES_SERVER=localhost:5433
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=doc_query

# Model Provider
# Choose between 'openai', 'local', or 'huggingface'
MODEL_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Local Model Settings (required if MODEL_PROVIDER=local)
LOCAL_EMBEDDING_MODEL_PATH=/path/to/your/embedding/model
LOCAL_COMPLETION_MODEL_PATH=/path/to/your/completion/model
LOCAL_MODEL_SERVER_URL=http://localhost:8080

# HuggingFace Settings (required if MODEL_PROVIDER=huggingface)
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_KEY

# Vector Settings
VECTOR_COLLECTION_NAME=document_embeddings
EMBEDDING_DIMENSION=1536

# Model Names
EMBEDDING_MODEL=text-embedding-3-small
COMPLETION_MODEL=gpt-4o

# Alternative Model Names (used if MODEL_PROVIDER is not openai)
LOCAL_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
LOCAL_COMPLETION_MODEL=mistralai/Mistral-7B-Instruct-v0.2
HUGGINGFACE_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
HUGGINGFACE_COMPLETION_MODEL=mistralai/Mistral-7B-Instruct-v0.2 